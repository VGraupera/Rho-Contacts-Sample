<div class="toolbar">
	<h1 id="pageTitle">
		New Contact
	</h1>
</div>

<form title="New Contact" 
	  class="panel"
	  id="contact_new_form" 
	  method="POST" 
	  action="<%=url_for(:action => :create)%>" selected="true">
	<fieldset>	
		  <div class="row">
			  <label>First Name: </label>
			  <input type="text" name="contact[first_name]"/>
		  </div>
		
		  <div class="row">
			  <label>Last Name: </label>
			  <input type="text" name="contact[last_name]"/>
		  </div>
		
		  <div class="row">
			  <label>Email Address: </label>
			  <input type="text" name="contact[email_address]"/>
		  </div>
		
		  <div class="row">
			  <label>Business Number: </label>
			  <input type="text" name="contact[business_number]"/>
		  </div>
		
	</fieldset>
	<input type="submit" value="Create"/>
</form>