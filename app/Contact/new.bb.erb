<div id="pageTitle">
    <h1>New Contact</h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :index %>
</div>


<div id="content">

    <form method="POST" action="<%= url_for :action => :create %>">
	    <input type="hidden" name="id" value="<%= @contact.object %>"/>
        <table>
    		
    		  <tr>
    			  <td class="itemLabel">First name: </td>
    			  <td class="itemValue"><input type="text" name="contact[first_name]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Last name: </td>
    			  <td class="itemValue"><input type="text" name="contact[last_name]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Email address: </td>
    			  <td class="itemValue"><input type="text" name="contact[email_address]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Business number: </td>
    			  <td class="itemValue"><input type="text" name="contact[business_number]"/></td>
    		  </tr>
    		
        </table>
        <input type="submit" class="standardButton" value="Create" />
    </form>
</div>